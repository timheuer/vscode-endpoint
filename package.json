{
  "name": "vscode-endpoint",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "0.0.0-placeholder",
  "preview": true,
  "author": {
    "name": "Tim Heuer",
    "url": "https://github.com/timheuer"
  },
  "publisher": "timheuer",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/timheuer/vscode-endpoint"
  },
  "bugs": {
    "url": "https://github.com/timheuer/vscode-endpoint/issues"
  },
  "qna": "https://github.com/timheuer/vscode-endpoint/issues",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Other"
  ],
  "keywords": [
    "rest",
    "api",
    "http",
    "rest client",
    "api client",
    "http client",
    "api testing",
    "web services",
    "curl"
  ],
  "activationEvents": [ ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "endpoint",
          "title": "%viewsContainers.activitybar.endpoint.title%",
          "icon": "icon.png"
        }
      ]
    },
    "views": {
      "endpoint": [
        {
          "id": "endpointCollections",
          "name": "%views.endpoint.collections.name%",
          "icon": "$(folder-library)"
        },
        {
          "id": "endpointEnvironments",
          "name": "%views.endpoint.environments.name%",
          "icon": "$(symbol-namespace)"
        },
        {
          "id": "endpointHistory",
          "name": "%views.endpoint.history.name%",
          "icon": "$(history)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "endpointCollections",
        "contents": "%viewsWelcome.collections.empty%",
        "when": "!endpoint.hasCollections"
      },
      {
        "view": "endpointEnvironments",
        "contents": "%viewsWelcome.environments.empty%",
        "when": "!endpoint.hasEnvironments"
      }
    ],
    "commands": [
      {
        "command": "endpoint.refreshCollections",
        "title": "%commands.refreshCollections.title%",
        "icon": "$(refresh)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.addCollection",
        "title": "%commands.addCollection.title%",
        "icon": "$(add)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.editCollection",
        "title": "%commands.editCollection.title%",
        "icon": "$(edit)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.deleteCollection",
        "title": "%commands.deleteCollection.title%",
        "icon": "$(trash)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.duplicateCollection",
        "title": "%commands.duplicateCollection.title%",
        "icon": "$(copy)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.collectionSettings",
        "title": "%commands.collectionSettings.title%",
        "icon": "$(gear)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.convertToRepoCollection",
        "title": "%commands.convertToRepoCollection.title%",
        "icon": "$(repo)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.addRequest",
        "title": "%commands.addRequest.title%",
        "icon": "$(add)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.editRequest",
        "title": "%commands.editRequest.title%",
        "icon": "$(edit)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.deleteRequest",
        "title": "%commands.deleteRequest.title%",
        "icon": "$(trash)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.duplicateRequest",
        "title": "%commands.duplicateRequest.title%",
        "icon": "$(copy)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.openRequest",
        "title": "%commands.openRequest.title%",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.sendRequest",
        "title": "%commands.sendRequest.title%",
        "icon": "$(play)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.refreshEnvironments",
        "title": "%commands.refreshEnvironments.title%",
        "icon": "$(refresh)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.addEnvironment",
        "title": "%commands.addEnvironment.title%",
        "icon": "$(add)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.editEnvironment",
        "title": "%commands.editEnvironment.title%",
        "icon": "$(edit)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.deleteEnvironment",
        "title": "%commands.deleteEnvironment.title%",
        "icon": "$(trash)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.duplicateEnvironment",
        "title": "%commands.duplicateEnvironment.title%",
        "icon": "$(copy)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.setActiveEnvironment",
        "title": "%commands.setActiveEnvironment.title%",
        "icon": "$(check)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.addVariable",
        "title": "%commands.addVariable.title%",
        "icon": "$(add)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.editVariable",
        "title": "%commands.editVariable.title%",
        "icon": "$(edit)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.deleteVariable",
        "title": "%commands.deleteVariable.title%",
        "icon": "$(trash)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.toggleVariable",
        "title": "%commands.toggleVariable.title%",
        "icon": "$(circle-slash)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.refreshHistory",
        "title": "%commands.refreshHistory.title%",
        "icon": "$(refresh)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.clearHistory",
        "title": "%commands.clearHistory.title%",
        "icon": "$(clear-all)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.deleteHistoryItem",
        "title": "%commands.deleteHistoryItem.title%",
        "icon": "$(trash)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.openHistoryItem",
        "title": "%commands.openHistoryItem.title%",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.saveHistoryToCollection",
        "title": "%commands.saveHistoryToCollection.title%",
        "icon": "$(save)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.newRequest",
        "title": "%commands.newRequest.title%",
        "icon": "$(add)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.import",
        "title": "%commands.import.title%",
        "icon": "$(cloud-download)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.export",
        "title": "%commands.export.title%",
        "icon": "$(cloud-upload)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.exportCollection",
        "title": "%commands.exportCollection.title%",
        "icon": "$(export)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.copyAsCode",
        "title": "%commands.copyAsCode.title%",
        "icon": "$(code)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.quickSwitchEnvironment",
        "title": "%commands.quickSwitchEnvironment.title%",
        "icon": "$(symbol-namespace)",
        "category": "Endpoint"
      },
      {
        "command": "endpoint.quickRunRequest",
        "title": "%commands.quickRunRequest.title%",
        "icon": "$(play)",
        "category": "Endpoint"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "endpoint.addCollection",
          "when": "view == endpointCollections",
          "group": "navigation"
        },
        {
          "command": "endpoint.import",
          "when": "view == endpointCollections",
          "group": "navigation"
        },
        {
          "command": "endpoint.export",
          "when": "view == endpointCollections",
          "group": "navigation"
        },
        {
          "command": "endpoint.refreshCollections",
          "when": "view == endpointCollections",
          "group": "navigation"
        },
        {
          "command": "endpoint.addEnvironment",
          "when": "view == endpointEnvironments",
          "group": "navigation"
        },
        {
          "command": "endpoint.refreshEnvironments",
          "when": "view == endpointEnvironments",
          "group": "navigation"
        },
        {
          "command": "endpoint.clearHistory",
          "when": "view == endpointHistory",
          "group": "navigation"
        },
        {
          "command": "endpoint.refreshHistory",
          "when": "view == endpointHistory",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "endpoint.addRequest",
          "when": "view == endpointCollections && viewItem == collection",
          "group": "inline@1"
        },
        {
          "command": "endpoint.editCollection",
          "when": "view == endpointCollections && viewItem == collection",
          "group": "inline@2"
        },
        {
          "command": "endpoint.collectionSettings",
          "when": "view == endpointCollections && viewItem == collection",
          "group": "inline@3"
        },
        {
          "command": "endpoint.addRequest",
          "when": "view == endpointCollections && viewItem == collection",
          "group": "1_crud@1"
        },
        {
          "command": "endpoint.editCollection",
          "when": "view == endpointCollections && viewItem == collection",
          "group": "1_crud@2"
        },
        {
          "command": "endpoint.duplicateCollection",
          "when": "view == endpointCollections && viewItem == collection",
          "group": "1_crud@3"
        },
        {
          "command": "endpoint.exportCollection",
          "when": "view == endpointCollections && viewItem == collection",
          "group": "1_crud@4"
        },
        {
          "command": "endpoint.collectionSettings",
          "when": "view == endpointCollections && viewItem == collection",
          "group": "1_crud@5"
        },
        {
          "command": "endpoint.convertToRepoCollection",
          "when": "view == endpointCollections && viewItem == collection",
          "group": "1_crud@6"
        },
        {
          "command": "endpoint.deleteCollection",
          "when": "view == endpointCollections && viewItem == collection",
          "group": "2_delete"
        },
        {
          "command": "endpoint.addRequest",
          "when": "view == endpointCollections && viewItem == repoCollection",
          "group": "inline@1"
        },
        {
          "command": "endpoint.editCollection",
          "when": "view == endpointCollections && viewItem == repoCollection",
          "group": "inline@2"
        },
        {
          "command": "endpoint.collectionSettings",
          "when": "view == endpointCollections && viewItem == repoCollection",
          "group": "inline@3"
        },
        {
          "command": "endpoint.addRequest",
          "when": "view == endpointCollections && viewItem == repoCollection",
          "group": "1_crud@1"
        },
        {
          "command": "endpoint.editCollection",
          "when": "view == endpointCollections && viewItem == repoCollection",
          "group": "1_crud@2"
        },
        {
          "command": "endpoint.duplicateCollection",
          "when": "view == endpointCollections && viewItem == repoCollection",
          "group": "1_crud@3"
        },
        {
          "command": "endpoint.exportCollection",
          "when": "view == endpointCollections && viewItem == repoCollection",
          "group": "1_crud@4"
        },
        {
          "command": "endpoint.collectionSettings",
          "when": "view == endpointCollections && viewItem == repoCollection",
          "group": "1_crud@5"
        },
        {
          "command": "endpoint.deleteCollection",
          "when": "view == endpointCollections && viewItem == repoCollection",
          "group": "2_delete"
        },
        {
          "command": "endpoint.sendRequest",
          "when": "view == endpointCollections && viewItem == request",
          "group": "inline@1"
        },
        {
          "command": "endpoint.editRequest",
          "when": "view == endpointCollections && viewItem == request",
          "group": "inline@2"
        },
        {
          "command": "endpoint.deleteRequest",
          "when": "view == endpointCollections && viewItem == request",
          "group": "inline@3"
        },
        {
          "command": "endpoint.sendRequest",
          "when": "view == endpointCollections && viewItem == request",
          "group": "0_send"
        },
        {
          "command": "endpoint.editRequest",
          "when": "view == endpointCollections && viewItem == request",
          "group": "1_crud@1"
        },
        {
          "command": "endpoint.duplicateRequest",
          "when": "view == endpointCollections && viewItem == request",
          "group": "1_crud@2"
        },
        {
          "command": "endpoint.deleteRequest",
          "when": "view == endpointCollections && viewItem == request",
          "group": "2_delete"
        },
        {
          "command": "endpoint.copyAsCode",
          "when": "view == endpointCollections && viewItem == request",
          "group": "1_crud@3"
        },
        {
          "command": "endpoint.setActiveEnvironment",
          "when": "view == endpointEnvironments && viewItem == environment",
          "group": "0_active"
        },
        {
          "command": "endpoint.addVariable",
          "when": "view == endpointEnvironments && viewItem =~ /^environment/",
          "group": "inline@1"
        },
        {
          "command": "endpoint.addVariable",
          "when": "view == endpointEnvironments && viewItem =~ /^environment/",
          "group": "1_crud@1"
        },
        {
          "command": "endpoint.editEnvironment",
          "when": "view == endpointEnvironments && viewItem =~ /^environment/",
          "group": "1_crud@2"
        },
        {
          "command": "endpoint.duplicateEnvironment",
          "when": "view == endpointEnvironments && viewItem =~ /^environment/",
          "group": "1_crud@3"
        },
        {
          "command": "endpoint.deleteEnvironment",
          "when": "view == endpointEnvironments && viewItem =~ /^environment/",
          "group": "2_delete"
        },
        {
          "command": "endpoint.editVariable",
          "when": "view == endpointEnvironments && viewItem == variable",
          "group": "inline@1"
        },
        {
          "command": "endpoint.deleteVariable",
          "when": "view == endpointEnvironments && viewItem == variable",
          "group": "inline@2"
        },
        {
          "command": "endpoint.editVariable",
          "when": "view == endpointEnvironments && viewItem == variable",
          "group": "1_crud@1"
        },
        {
          "command": "endpoint.toggleVariable",
          "when": "view == endpointEnvironments && viewItem == variable",
          "group": "1_crud@2"
        },
        {
          "command": "endpoint.deleteVariable",
          "when": "view == endpointEnvironments && viewItem == variable",
          "group": "2_delete"
        },
        {
          "command": "endpoint.saveHistoryToCollection",
          "when": "view == endpointHistory && viewItem == historyItem",
          "group": "1_actions@1"
        },
        {
          "command": "endpoint.deleteHistoryItem",
          "when": "view == endpointHistory && viewItem == historyItem",
          "group": "2_delete"
        }
      ]
    },
    "keybindings": [
      {
        "command": "endpoint.newRequest",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r"
      },
      {
        "command": "endpoint.import",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i"
      },
      {
        "command": "endpoint.export",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e"
      },
      {
        "command": "endpoint.quickRunRequest",
        "key": "ctrl+shift+x",
        "mac": "cmd+shift+x"
      }
    ],
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "endpoint.logLevel": {
          "type": "string",
          "default": "info",
          "enum": [
            "off",
            "error",
            "warn",
            "info",
            "debug",
            "trace"
          ],
          "enumDescriptions": [
            "%configuration.logLevel.enum.off%",
            "%configuration.logLevel.enum.error%",
            "%configuration.logLevel.enum.warn%",
            "%configuration.logLevel.enum.info%",
            "%configuration.logLevel.enum.debug%",
            "%configuration.logLevel.enum.trace%"
          ],
          "description": "%configuration.logLevel.description%"
        },
        "endpoint.timeout": {
          "type": "number",
          "default": 30000,
          "minimum": 0,
          "description": "%configuration.timeout.description%"
        },
        "endpoint.followRedirects": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.followRedirects.description%"
        },
        "endpoint.maxRedirects": {
          "type": "number",
          "default": 10,
          "minimum": 0,
          "maximum": 50,
          "description": "%configuration.maxRedirects.description%"
        },
        "endpoint.rejectUnauthorized": {
          "type": "boolean",
          "default": true,
          "description": "%configuration.rejectUnauthorized.description%"
        },
        "endpoint.historyLimit": {
          "type": "number",
          "default": 20,
          "minimum": 0,
          "maximum": 1000,
          "description": "%configuration.historyLimit.description%"
        },
        "endpoint.defaultContentType": {
          "type": "string",
          "default": "json",
          "enum": [
            "json",
            "form",
            "xml",
            "text",
            "none"
          ],
          "enumDescriptions": [
            "%configuration.defaultContentType.enum.json%",
            "%configuration.defaultContentType.enum.form%",
            "%configuration.defaultContentType.enum.xml%",
            "%configuration.defaultContentType.enum.text%",
            "%configuration.defaultContentType.enum.none%"
          ],
          "description": "%configuration.defaultContentType.description%"
        },
        "endpoint.history.storeResponses": {
          "type": "boolean",
          "default": true,
          "description": "Store response bodies in history (JSON responses only)"
        },
        "endpoint.history.maxResponseSize": {
          "type": "number",
          "default": 262144,
          "minimum": 1024,
          "description": "Maximum response body size to store in bytes (default: 256KB)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "@timheuer/vscode-ext-logger": "^0.1.35",
    "@vscode-elements/elements": "^1.2.0",
    "@vscode/codicons": "^0.0.36",
    "shiki": "^3.21.0"
  }
}
